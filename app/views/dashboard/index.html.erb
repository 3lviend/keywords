<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= form_tag select_date_path, :method => 'get', multipart: true do %>
        <div class="col-md-3">
          <div class="form-group">
            <label>Start Date</label>
            <p><%= text_field_tag 'search[from]', (params[:search][:from] rescue ''), :id=>"from", :class=>"form-control" %></p>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <label>Until Date</label>
            <%= text_field_tag 'search[to]', (params[:search][:to] rescue ''), :id=>"to" , :class=>"form-control"%>
          </div>
        </div>
        <div class="col-md-3">
        	<div class="form-group">
        		<label class="cs-label"></label>
	          <%= submit_tag "Search", :name => nil, :class=>"form-control cs-form-control btn btn-primary pst" %>
	        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
           <h4>Keywords</h4>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
           <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Query</th>
                    <th>Impressions</th>
                    <th>clicks</th>
                    <th>CTR</th>
                    <th>AVG Position</th>
                    <th>Date</th>
                    <th>New</th>
                </tr>
            </thead>
            <tbody>
            <% @keywords.each do |key| %>
                <tr>
                    <td><%= key.query %></td>
                    <td><%= key.impressions %></td>
                    <td><%= key.clicks %></td>
                    <td><%= key.ctr %></td>
                    <td><%= key.avg_position %></td>
                    <td><%= key.date %></td>
                    <td><%= key.new %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
      </div>
    </div>
   </div>
  </div>
 </div>
</div>

