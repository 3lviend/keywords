<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Visibility (current)</th>
                <th>Traffic</th>
                <th>Average CTR</th>
                <th>Average Position</th>
            </tr>
        </thead>
        <tbody>
            <% lost_rankings(@keywords).each_with_index do |val, index| %>
              <tr>
                <td><%= val[0] %></td>
                <td><%= val[1].sum(&:impressions) %> <br> Impressions <br> +100,000 (+10%)</td>
                <td><%= overall_traffic(val[1]) %> <br> Clicks <br> +x,xxx <br> (xx.xx%)</td>
                <td><%= overall_avg_ctr(val[1]) %> <br> +x,xxx <br> (xx.xx%)</td>
                <td><%= overall_avg_position(val[1]) %> <br> +x,xxx <br> (xx.xx%)</td>
              </tr>
            <%end%>
        </tbody>
    </table>
</div>