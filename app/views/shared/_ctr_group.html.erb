<div class="table-responsive">
           <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Position Group</th>
                    <th>CTR</th>
                    <th>CTR from previous period</th>
                    <th>Comparison</th>
                </tr>
            </thead>
            <tbody>
            <% ctr_group(@keywords_1).each_with_index do |val, index| %>
              <% i = index+1 %>
              <% i = 9 if (i) > 8%>
              <tr>
                    <!-- data 1 -->
                    <td><%= index+1 %></td>
                    <td class="td<%= i %>"><%= top_keyword(val[1], "ctr")%> %</td>
                    <td><%= second_period(val[0], @keywords_2, "ctr")%> %</td>
                    <td>+ <%= compare_result(top_keyword(val[1], "ctr"), second_period(val[0], @keywords_2, "ctr"))%></td>
                </tr>
            <% end %>
                </tbody>
              </table>
          </div>